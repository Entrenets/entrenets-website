{% extends "base.njk" %} {% block content %}

<section class="hero">
  <div class="">
    <h3 class="title">{{title | safe}}</h3>
  </div>
</section>

<section class="about-section">
  <div class="container introContainer">
    <div class="imageContent image1">
      <img src="{{aboutUs.image}}" class="image" />
    </div>
    <div class="textContent text1">
      <h4 class="title">{{aboutUs.title | safe}}</h4>
      <p class="description paragraph">{{aboutUs.introduction | safe}}</p>
    </div>
    <div class="textContent text2">
      <h6 class="title">{{vision.innovate.title}}</h6>
      <p class="description paragraph">{{vision.innovate.text}}</p>
    </div>
    <div class="imageContent image2">
      <img src="{{vision.innovate.image}}" class="image" />
    </div>
    <div class="imageContent image3">
      <img src="{{vision.humanPotential.image}}" class="image" />
    </div>
    <div class="textContent text3">
      <h6 class="title">{{vision.humanPotential.title}}</h6>
      <p class="description paragraph">{{vision.humanPotential.text}}</p>
    </div>
  </div>
</section>

<section class="about-section">
  <div class="container">
    <div class="section-title center">
      <h3 class="title center">{{valuesTitle | safe }}</h3>
    </div>
    <div class="gridContainerValues">
      {% for value in values %}
      <div class="grid-item valueContainer">
        <img src="{{value.icon}}" class="valueIcon" />
        <h6 class="title">{{value.title}}</h6>
        <p class="paragraph">{{value.description | safe}}</p>
      </div>
      {% endfor %}
    </div>
  </div>
</section>
{% endblock %}
