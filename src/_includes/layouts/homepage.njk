{% extends "base.njk" %} {% block content %}

<section class="site-hero">
  <div class="container">
    <div class="site-hero-content">
      <h1 class="hero-title">{{hero.title | safe}}</h1>
      <h6 class="hero-subtitle">{{hero.subTitle}}</h6>
    </div>
    <div class="hero-buttons">
      {% for button in hero.buttons%}
      <a href="/{{button.link}}" class="btn btn-secondary">
        <span class="btn-area">
          <span data-text="{{button.text}}">{{button.text}}</span>
        </span>
      </a>
      {%endfor%}
    </div>
  </div>
</section>

<section class="section">
  <div class="container"></div>
</section>

<section class="section" id="project">
  <div class="container center">
    <h2 class="missionTitle">{{mission.title | safe}}</h3>
    <h2 class="missionMain">{{mission.main | safe}}</h3>
    <a href="contact" class="btn CTA">
      <span class="btn-area">
        <span data-text="{{button.text}}">Start now</span>
      </span>
    </a>
  </div>
</section>

<section class="section solutions-section" id="project">
  <div class="section-title">
    <h2 class="solutions-title center">{{solutionsSection.title}}</h2>
    <p class="solutions-subtitle center">{{solutionsSection.subTitle}}</p>
  </div>
  <div class="solutions-grid">
    {% for solution in solutions %}
    <div class="solution-item">
    <img src="{{solution.image}}" class="icon"/>
      <p class="solution-subtitle">{{solution.subtitle}}</p>
      <h6 class="solution-title">{{solution.title}}</h6>
      <p class="solution-description">{{solution.description}}</p>
      <a href="{{solution.url}}" class="link">Learn more</a>
    </div>
    {% endfor %}
  </div>
</section>
<section class="section">
  <div class="section-title">
    <h2>{{studyCases.title}}</h2>
    <p class="case-study-subtitle center">{{studyCases.subtitle}}</p>
  </div>
  <div class="container section-customer-success">
    <div class="case-study-container grid-container">
      {% for case in cases %}
      <div class="case-study-item-content">
        <h6 class="case-study-industry">{{case.industry}}</h6>
        <h5 class="case-study-title">{{case.title}}</h5>
        <p class="case-study-text">{{case.subtitle}}</p>
        <ul class="case-study-facts">
          {%for fact in case.facts%}
          <li class="case-study-fact">
            <img src="{{case.icon}}" class="case-study-fact-icon" />
            {{fact}}
          </li>
          {%endfor%}
        </ul>
        <a href="{{case.link}}" class="link">Read study case</a>
      </div>
      {%endfor%}
    </div>
  </div>
</section>

<section class="section">
  <div class="container">
    <div class="section-title">
      <h2>Why customers choose Entrenets</h2>
      <p>What sets us apart in delivering cloud-first success.</p>
    </div>
    <div class="differentiators-grid">
      {% for differentiator in differentiators %}
      <div class="differentiator-card">
        <div class="differentiator-icon">
          <img src="{{ differentiator.icon }}" alt="{{ differentiator.title }} icon" class="icon"/>
        </div>
        <h6 class="differentiator-title">{{ differentiator.title }}</h4>
        <p class="differentiator-description">{{ differentiator.description }}</p>
      </div>
      {% endfor %}
    </div>
  </div>
</section>
{% endblock %}
